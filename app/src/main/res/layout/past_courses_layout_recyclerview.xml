<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="#D3D5DC"
    app:cardElevation="20dp"
    android:id="@+id/parent"
    app:cardCornerRadius="2dp"
    android:layout_marginBottom="3dp">


    <LinearLayout
        android:id="@+id/course_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/course_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title: "
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/instructor_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructor: "
            android:textSize="22dp"
            android:textStyle="bold"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:columnCount="3">

            <ImageView
                android:id="@+id/image"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_margin="1dp"
                android:src="@drawable/ic_bookmark"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:orientation="vertical"
                android:padding="2dp">

                <TextView
                    android:id="@+id/credits_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credits: "
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time: "
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:orientation="vertical"
                android:padding="2dp"
                android:layout_marginLeft="60dp">

                <TextView
                    android:id="@+id/grade_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grade: "
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/gpa_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GPA: "
                    android:textSize="14dp" />

            </LinearLayout>
        </GridLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to  Course page"
            android:layout_marginLeft="100dp"
            android:id="@+id/go_to_coursepage_btn"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>