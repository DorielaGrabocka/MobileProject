<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="#D3D5DC"
    app:cardElevation="20dp"
    android:id="@+id/parent"
    app:cardCornerRadius="2dp"
    android:layout_marginBottom="3dp">


    <LinearLayout
        android:id="@+id/title_and_author_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/book_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/book_author_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Authors"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/book_publisher_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Publisher"
            android:textSize="14dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:columnCount="2">

            <ImageView
                android:id="@+id/image"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_margin="1dp"
                android:src="@drawable/ic_baseline_menu_book_24" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:padding="2dp">

                <TextView
                    android:id="@+id/book_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/book_rating_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/book_pages_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pages"
                    android:textSize="14dp" />

            </LinearLayout>
        </GridLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Snippet"
            android:id="@+id/snippet_tv"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>